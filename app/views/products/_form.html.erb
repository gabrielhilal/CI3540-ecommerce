<% #partial form for views "new.html.erb" and "edit.html.erb". %>
<% #@product is declared in the products controller actions NEW and EDIT, %>
<% # so its value depends on the action that the form will be used for (NEW or EDIT). %>
<% #start form. %>
<%= form_for(@product) do |f| %>
    <% #display error messages if form can't be submitted. %>
    <% #please see shared partial "error_messages.html.erb" for details. %>
    <% #please also refer to the model Products for validations that may impede submission %>
    <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :category %><br />
    <% #drop down list with all categories %>
    <%= f.collection_select(:category_id, Category.all, :id, :name , {:include_blank => 'Select Category'} ) %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
